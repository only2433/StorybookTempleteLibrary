<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">


    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/front_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="368"
        app:scale_base_width="300" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/recommend_app_box"
            android:scaleType="fitXY"
            app:scale_height="368"
            app:scale_left="0"
            app:scale_top="0"
            app:scale_width="300" />

        <ImageView
            android:id="@+id/front_title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:scale_height="236"
            app:scale_left="32"
            app:scale_top="24"
            app:scale_width="236" />

        <TextView
            android:id="@+id/front_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            app:scale_height="80"
            app:scale_left="32"
            app:scale_textsize="30"
            app:scale_top="270"
            app:scale_width="236" />
        <ImageView
            android:id="@+id/front_app_install_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_height="87"
            app:scale_left="186"
            app:scale_top="24"
            app:scale_width="83" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>