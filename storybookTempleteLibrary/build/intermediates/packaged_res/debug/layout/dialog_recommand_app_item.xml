<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <com.littlefox.library.view.scale.ScalableLayout
        android:id="@+id/front_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recommend_app_box"
        sl:scale_base_height="368"
        sl:scale_base_width="297" >

        <ImageView
            android:id="@+id/front_title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_height="236"
            sl:scale_left="26"
            sl:scale_top="24"
            sl:scale_width="236" />

        <TextView
            android:id="@+id/front_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            sl:scale_height="80"
            sl:scale_left="26"
            sl:scale_textsize="30"
            sl:scale_top="270"
            sl:scale_width="236" />
        <ImageView
            android:id="@+id/front_app_install_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_height="87"
            sl:scale_left="192"
            sl:scale_top="9"
            sl:scale_width="83" />
"
    </com.littlefox.library.view.scale.ScalableLayout>

</FrameLayout>