<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">
    
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/dialog_root_appraisal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_width="1210"
        app:scale_base_height="722"
        >
        
        <ImageView
            android:id="@+id/close_appraisal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_close_appraisal"
            app:scale_top="20"
            app:scale_left="1085"
            app:scale_width="85"
            app:scale_height="85"/>
         <TextView
            android:id="@+id/btn_star_give_appraisal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_appraisal"
            android:textColor="@color/white"
            android:text="@string/title_star_give"
            android:gravity="center"
            app:scale_top="448"
            app:scale_left="386"
            app:scale_width="437"
            app:scale_height="110"
            app:scale_textsize="45"/>
         
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_line_appraisal"
            app:scale_top="620"
            app:scale_left="525"
            app:scale_width="162"
            app:scale_height="1"/>
    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>
