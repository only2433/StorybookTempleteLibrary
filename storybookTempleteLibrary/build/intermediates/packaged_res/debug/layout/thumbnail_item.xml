<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <com.littlefox.library.view.scale.ScalableLayout 
        android:id="@+id/root_thumb_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_width="866"
        sl:scale_base_height="530">
        
        <ImageView 
            android:id="@+id/thumbnail_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            sl:scale_top="0"
            sl:scale_left="0"
            sl:scale_width="866"
            sl:scale_height="530"/>
        <ImageView 
            android:id="@+id/thumbnail_download_complete_check_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thumbnail_check_border"
            sl:scale_top="0"
            sl:scale_left="0"
            sl:scale_width="866"
            sl:scale_height="530"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/thumbnail_downloading_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thumbnail_download_bg"
            android:visibility="gone"
            sl:scale_height="530"
            sl:scale_left="0"
            sl:scale_top="0"
            sl:scale_width="866" />        
        
        <ImageView
            android:id="@+id/thumbnail_play_complete_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thumbnail_check"
            sl:scale_top="15"
            sl:scale_left="781"
            sl:scale_width="69"
            sl:scale_height="55"
            android:visibility="gone"/>
        
        <ImageView
            android:id="@+id/thumbnail_purchase_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thumbnail_lock"
            sl:scale_height="145"
            sl:scale_left="710"
            sl:scale_top="5"
            sl:scale_width="145"
            android:visibility="gone" />
		<com.littlefox.storybook.lib.view.CircleProgressView
            android:id="@+id/thumbnail_progress_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_height="145"
            sl:scale_left="710"
            sl:scale_top="5"
            sl:scale_width="145" />

        <ImageView
            android:id="@+id/thumbnail_idle_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thumbnail_download_bg"
            android:visibility="gone"
            sl:scale_height="530"
            sl:scale_left="0"
            sl:scale_top="0"
            sl:scale_width="866" />
            
    </com.littlefox.library.view.scale.ScalableLayout>

</LinearLayout>
