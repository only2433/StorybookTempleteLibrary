<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >

    <com.littlefox.library.view.scale.ScalableLayout
        android:id="@+id/dialog_root_recommand_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recommend_bg"
        sl:scale_base_height="1036"
        sl:scale_base_width="1743" >

        <TextView
            android:id="@+id/recommand_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/recommand_main_title"
            android:textColor="@color/black"
            sl:scale_height="65"
            sl:scale_left="0"
            sl:scale_textsize="48"
            sl:scale_top="49"
            sl:scale_width="1743" />

        <ImageView
            android:id="@+id/recommand_app_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/btn_close_promotion"
            sl:scale_height="85"
            sl:scale_left="1602"
            sl:scale_top="31"
            sl:scale_width="85" />

        <TextView
            android:id="@+id/recommand_popular_tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recommend_tab01_on"
            android:gravity="center"
            android:text="@string/recommand_popular_title"
            android:textColor="@color/white"
            sl:scale_height="86"
            sl:scale_left="72"
            sl:scale_textsize="38"
            sl:scale_top="146"
            sl:scale_width="532" />

        <TextView
            android:id="@+id/recommand_newest_tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recommend_tab02_off"
            android:gravity="center"
            android:text="@string/recommand_newest_title"
            android:textColor="@color/black"
            sl:scale_height="86"
            sl:scale_left="604"
            sl:scale_textsize="38"
            sl:scale_top="146"
            sl:scale_width="532" />

        <TextView
            android:id="@+id/recommand_name_tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recommend_tab03_off"
            android:gravity="center"
            android:text="@string/recommand_name_title"
            android:textColor="@color/black"
            sl:scale_height="86"
            sl:scale_left="1136"
            sl:scale_textsize="38"
            sl:scale_top="146"
            sl:scale_width="532" />
        
      <ScrollView
        android:id="@+id/recommand_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_top="270"
        sl:scale_left="0"
        sl:scale_width="1743"
        sl:scale_height="710" >

        <com.littlefox.library.view.scale.ScalableLayout
            android:id="@+id/add_recommand_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_base_height="700"
            sl:scale_base_width="1743" >
        </com.littlefox.library.view.scale.ScalableLayout>
    </ScrollView>
    </com.littlefox.library.view.scale.ScalableLayout>



</LinearLayout>