<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.littlefox.library.view.scale.ScalableLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_width="1300"
        sl:scale_base_height="930"
        >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_bg_promotion"
            sl:scale_top="0"
            sl:scale_left="0"
            sl:scale_width="1300"
            sl:scale_height="930"/>
         <TextView
            android:id="@+id/promotion_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/promotion_list_title"
            android:textColor="@color/promotion_title_color"
            android:gravity="center"
            sl:scale_top="0"
            sl:scale_left="60"
            sl:scale_width="1180"
            sl:scale_height="132"
            sl:scale_textsize="50"/>
        <ImageView
            android:id="@+id/promotion_exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_close_promotion"
            sl:scale_top="26"
            sl:scale_left="1155"
            sl:scale_width="85"
            sl:scale_height="85"/>
        <ImageView 
            android:id="@+id/promotion_list_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_box_promotion"
            android:scaleType="fitXY"
            sl:scale_top="132"
            sl:scale_left="60"
            sl:scale_width="1180"
            sl:scale_height="757"/>
        <ListView
            android:id="@+id/promotion_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/list_line_promotion"
            sl:scale_top="155"
            sl:scale_left="90"
            sl:scale_width="1120"
            sl:scale_height="595"/>
        
        <ImageView
            android:id="@+id/promotion_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_ok_promotion"
            sl:scale_top="759"
            sl:scale_left="535"
            sl:scale_width="230"
            sl:scale_height="110"/>
    </com.littlefox.library.view.scale.ScalableLayout>

</RelativeLayout>
